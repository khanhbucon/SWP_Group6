@model Mo_Client.Services.AuthApiClient.ShopStatisticsResponse

@{
    ViewData["Title"] = "Thống Kê Shop";
}

<h2>Thống Kê Shop: @Model.ShopName</h2>

<div class="row">
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Tổng Sản Phẩm</h5>
                <p class="card-text display-4">@Model.TotalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Đã Bán</h5>
                <p class="card-text display-4">@Model.TotalProductsSold</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Doanh Thu</h5>
                <p class="card-text display-4">@Model.TotalRevenue.ToString("N0") VND</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Đánh Giá Trung Bình</h5>
                <p class="card-text display-4">@Model.AverageRating.ToString("F1")/5</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tổng Đơn Hàng</h5>
                <p class="card-text">@Model.TotalOrders</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Tổng Feedback</h5>
                <p class="card-text">@Model.TotalFeedbacks</p>
            </div>
        </div>
    </div>
</div>

<a asp-controller="Seller" asp-action="Shops" class="btn btn-secondary mt-3">Quay Lại</a>
