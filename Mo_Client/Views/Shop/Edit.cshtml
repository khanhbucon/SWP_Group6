@model Mo_Client.Services.AuthApiClient.UpdateShopRequest

@{
    ViewData["Title"] = "Chỉnh Sửa Shop";
}

<h2>Chỉnh Sửa Shop</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" name="shopId" value="@ViewBag.ShopId" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Cập Nhật</button>
    <a asp-controller="Seller" asp-action="Shops" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
