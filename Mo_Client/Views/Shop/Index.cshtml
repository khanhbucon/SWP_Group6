        <p class="card-text">@Model.Description</p>
        <p><strong>T?ng s?n ph?m:</strong> @Model.TotalProducts</p>
        <p><strong>Tr?ng thái:</strong> @(Model.IsActive == true ? "Ho?t ð?ng" : "Không ho?t ð?ng")</p>
        <p><strong>Ngày t?o:</strong> @Model.CreatedAt?.ToString("dd/MM/yyyy")</p>
        <a asp-action="Edit" class="btn btn-primary">Ch?nh s?a</a>
        <a asp-action="Statistics" class="btn btn-info">Th?ng kê</a>
    </div>
</div>