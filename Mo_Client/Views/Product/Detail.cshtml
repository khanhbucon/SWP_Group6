@using Mo_Entities.Models
@model Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="~/images/default-product.png" class="img-fluid rounded shadow" alt="@Model.Name" />
        </div>
        <div class="col-md-7">
            <h3>@Model.Name</h3>
            <p class="text-muted">@Model.ShopName</p>
            <p>@Model.Description</p>
            <p class="text-secondary">@Model.Details</p>

            <a href="/Product/Index" class="btn btn-outline-secondary mt-3">← Quay lại</a>
        </div>
    </div>
</div>
