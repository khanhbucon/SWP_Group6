@model List<Mo_Client.Services.AuthApiClient.ShopResponse>
@{
    ViewData["Title"] = "Gian hàng";
    Layout = "~/Views/Seller/_SellerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Gian hàng</h4>
    <div>
        <span class="me-2 text-muted">@((Model?.Count ?? 0)) / 5</span>
        <a class="btn btn-primary @(Model != null && Model.Count >= 5 ? "disabled" : string.Empty)" asp-controller="Seller" asp-action="AddShop">Thêm mới</a>
    </div>
    
</div>



@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">Bạn chưa tạo gian hàng nào.</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Thao tác</th>
                    <th>Tên gian hàng</th>
                    <th>Loại</th>
                    <th>Trùng</th>
                    <th>Reseller</th>
                    <th>Đơn giá</th>
                    <th>Sàn</th>
                    <th>Kho</th>
                    <th>Ngày tạo</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td class="text-nowrap">
                        <a class="btn btn-sm btn-outline-primary" asp-controller="Seller" asp-action="EditShop" asp-route-shopId="@s.Id">Sửa</a>
                        <a class="btn btn-sm btn-outline-info" asp-controller="Seller" asp-action="ShopStats" asp-route-shopId="@s.Id">Thống kê</a>
                    </td>
                    <td>@s.Name</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>-</td>
                    <td>@s.CreatedAt?.ToString("dd/MM/yyyy")</td>
                    <td>@(s.IsActive == true ? "Hoạt động" : "Không hoạt động")</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
