@model List<Mo_Client.Services.AuthApiClient.ShopResponse>
@{
    ViewData["Title"] = "Gian hàng";
    Layout = "~/Views/Seller/_SellerLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="mb-0">
        <i class="fas fa-store me-2 text-primary"></i>Gian hàng
    </h4>
    <div class="d-flex align-items-center gap-3">
        <span class="badge bg-light text-dark fs-6">
            @((Model?.Count ?? 0)) / 5 gian hàng
        </span>
        <a class="btn btn-primary @(Model != null && Model.Count >= 5 ? "disabled" : string.Empty)" asp-controller="Seller" asp-action="AddShop">
            <i class="fas fa-plus me-2"></i>Thêm mới
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i>
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="empty-state text-center py-5">
        <div class="mb-4">
            <i class="fas fa-store text-muted" style="font-size: 5rem; opacity: 0.3;"></i>
        </div>
        <h5 class="text-muted mb-3">Chưa có gian hàng nào</h5>
        <p class="text-muted mb-4">Tạo gian hàng đầu tiên để bắt đầu kinh doanh trên nền tảng</p>
        <a class="btn btn-primary btn-lg px-4" asp-controller="Seller" asp-action="AddShop">
            <i class="fas fa-plus me-2"></i>Tạo gian hàng đầu tiên
        </a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var s in Model)
        {
            <div class="col-lg-6 col-xl-4">
                <div class="card shop-card h-100 shadow-sm border-0">
                    <div class="card-header bg-gradient-primary-light border-0 pb-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <div class="flex-grow-1">
                                <h5 class="card-title mb-1 text-truncate fw-bold">@s.Name</h5>
                                <div class="small text-muted d-flex align-items-center">
                                    <i class="fas fa-calendar-alt me-1"></i>
                                    @s.CreatedAt?.ToString("dd/MM/yyyy")
                                </div>
                            </div>
                            <span class="badge @(s.IsActive == true ? "bg-success" : "bg-secondary") ms-2 px-2 py-1">
                                <i class="fas @(s.IsActive == true ? "fa-check" : "fa-pause") fa-xs me-1"></i>
                                @(s.IsActive == true ? "Hoạt động" : "Tạm dừng")
                            </span>
                        </div>
                    </div>
                    
                    <div class="card-body">
                        <div class="row g-3 mb-3">
                            <div class="col-6">
                                <div class="stat-item">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-primary">
                                            <i class="fas fa-box text-white"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="stat-number">@s.TotalProducts</div>
                                            <small class="stat-label">Sản phẩm</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-item">
                                    <div class="d-flex align-items-center">
                                        <div class="icon-box bg-info">
                                            <i class="fas fa-tags text-white"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="stat-number">
                                                @if (s.CategoryNames != null && s.CategoryNames.Any())
                                                {
                                                    @s.CategoryNames.Count
                                                }
                                                else
                                                {
                                                    @:0
                                                }
                                            </div>
                                            <small class="stat-label">Danh mục</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @if (s.CategoryNames != null && s.CategoryNames.Any())
                        {
                            <div class="category-section">
                                <small class="text-muted d-block mb-2">
                                    <i class="fas fa-list me-1"></i>Loại sản phẩm:
                                </small>
                                <div class="d-flex flex-wrap gap-1">
                                    @foreach (var category in s.CategoryNames.Take(3))
                                    {
                                        <span class="badge category-badge">@category</span>
                                    }
                                    @if (s.CategoryNames.Count > 3)
                                    {
                                        <span class="badge category-badge-more">+@(s.CategoryNames.Count - 3) khác</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                    
                    <div class="card-footer bg-white border-0 pt-0">
                        <div class="d-grid gap-2">
                            <div class="btn-group btn-group-sm" role="group">
                                <a class="btn btn-outline-primary" asp-controller="Seller" asp-action="EditShop" asp-route-shopId="@s.Id">
                                    <i class="fas fa-edit me-1"></i>Sửa
                                </a>
                                <a class="btn btn-outline-info" asp-controller="Seller" asp-action="ShopStats" asp-route-shopId="@s.Id">
                                    <i class="fas fa-chart-bar me-1"></i>Thống kê
                                </a>
                            </div>
                            <a class="btn btn-success btn-sm" asp-controller="Product" asp-action="Create" asp-route-shopId="@s.Id">
                                <i class="fas fa-plus me-1"></i>Thêm sản phẩm
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
.bg-gradient-primary-light {
    background: linear-gradient(135deg, #f8f9ff 0%, #e3e7ff 100%);
}

.shop-card {
    transition: all 0.3s ease;
    border-radius: 12px;
    overflow: hidden;
}

.shop-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
}

.icon-box {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: linear-gradient(45deg, var(--bs-primary), #4f46e5);
}

.icon-box.bg-info {
    background: linear-gradient(45deg, var(--bs-info), #06b6d4);
}

.stat-number {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1a202c;
    line-height: 1;
}

.stat-label {
    font-size: 0.75rem;
    color: #718096;
    font-weight: 500;
}

.category-badge {
    background: linear-gradient(45deg, #667eea, #764ba2);
    color: white;
    border: none;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    font-size: 0.7rem;
}

.category-badge-more {
    background: #e2e8f0;
    color: #64748b;
    border: 1px solid #cbd5e0;
    font-weight: 500;
    padding: 0.25rem 0.5rem;
    font-size: 0.7rem;
}

.card-title {
    font-size: 1.1rem;
    color: #2d3748;
}

.btn-group .btn {
    flex: 1;
    font-weight: 500;
}

.empty-state {
    min-height: 60vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.alert {
    border-radius: 8px;
    border: none;
}

.badge {
    font-weight: 500;
}

@@media (max-width: 768px) {
    .shop-card {
        margin-bottom: 1.5rem;
    }
    
    .d-flex.justify-content-between.align-items-center.mb-4 {
        flex-direction: column;
        gap: 1rem;
        align-items: stretch !important;
    }
    
    .d-flex.align-items-center.gap-3 {
        justify-content: center;
    }
}

@@media (max-width: 576px) {
    .row.g-3.mb-3 .col-6 {
        margin-bottom: 1rem;
    }
    
    .btn-group.btn-group-sm .btn {
        font-size: 0.8rem;
        padding: 0.375rem 0.5rem;
    }
}
</style>
