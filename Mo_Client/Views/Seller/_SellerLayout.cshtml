@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <aside class="col-12 col-md-3 col-lg-2 bg-light border-end min-vh-100 py-3">
            <div class="fw-bold text-secondary px-3 mb-2">SALE</div>
            <ul class="nav flex-column mb-3">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="Sales">
                        <i class="fas fa-chart-line"></i> Sales
                    </a>
                </li>
            </ul>

            <div class="fw-bold text-secondary px-3 mb-2">SHOP</div>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="Shops">
                        <i class="fas fa-store"></i> Quản lý gian hàng
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="ProductOrders">
                        <i class="fas fa-box-open"></i> Đơn hàng sản phẩm
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="ServiceOrders">
                        <i class="fas fa-concierge-bell"></i> Đơn hàng dịch vụ
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="Preorders">
                        <i class="fas fa-clock"></i> Đặt trước
                    </a>
                </li>
                <!-- Bỏ Khiếu nại theo yêu cầu -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="Reviews">
                        <i class="fas fa-comments"></i> Đánh giá
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="Coupons">
                        <i class="fas fa-tags"></i> Mã giảm giá
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Seller" asp-action="TopShops">
                        <i class="fas fa-trophy"></i> Gian hàng Top 1
                    </a>
                </li>
            </ul>
        </aside>

        <main class="col-12 col-md-9 col-lg-10 p-4">
            @RenderBody()
        </main>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
