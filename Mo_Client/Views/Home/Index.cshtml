@{
    ViewData["Title"] = "Trang chủ";
}
<div class="container" style="max-width:720px;margin:6vh auto;">
    <h2>Trang chủ (mock)</h2>
    <p>Đăng nhập thành công! Đây là trang demo sau khi đăng nhập.</p>

    <div class="card mt-3 p-3">
        <p><strong>Token (trích):</strong>
        @{ var token = Context.Request.Cookies["accessToken"]; }
        @if (!string.IsNullOrEmpty(token))
        {
            @token.Substring(0, Math.Min(token.Length, 32))<text>...</text>
        }
        else { <text>Chưa có token</text>; }
        </p>

        <p><strong>Roles:</strong>
        @{ var roles = Context.Request.Cookies["roles"]; }
        @if (!string.IsNullOrEmpty(roles))
        { @roles }
        else { <text>(none)</text>; }
        </p>
    </div>

    <form method="post" action="/Account/Logout" class="mt-3">
        <button class="btn btn-outline-danger">Đăng xuất</button>
    </form>
</div>

