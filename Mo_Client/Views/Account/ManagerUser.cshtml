@model List<Mo_Client.Models.ListAccountResponse>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid px-0 manager-user-fullwidth">
    <div class="row no-gutters">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-users"></i> Quản lý người dùng
                    </h3>
                </div>
                <div class="card-body p-3">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @ViewBag.Error
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                   <div class="table-responsive">
                       <table class="table table-bordered table-striped table-hover table-sm" id="usersTable">
                            <thead class="thead-dark">
                                <tr>
                                    <th>ID</th>
                                    <th>Tên đăng nhập</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Số dư</th>
                                    <th>Trạng thái</th>
                                    <th>Vai trò</th>
                                    <th>Ngày tạo</th>
                                    <th>Tổng đơn hàng</th>
                                    <th>Tổng cửa hàng</th>
                                    <th>Sản phẩm đã bán</th>
                                    <th>Xác thực eKYC</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.UserId</td>
                                            <td>
                                                <strong>@user.Username</strong>
                                            </td>
                                            <td>@user.Email</td>
                                            <td>@(user.Phone ?? "N/A")</td>
                                            <td>
                                                <span class="badge badge-info">
                                                    @(user.Balance?.ToString("N0") ?? "0") VNĐ
                                                </span>
                                            </td>
                                            <td>
                                                @if (user.IsActive == true)
                                                {
                                                    <span class="badge badge-success">Hoạt động</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Bị khóa</span>
                                                }
                                            </td>
                                            <td>
                                                @if (user.Roles != null && user.Roles.Any())
                                                {
                                                    @foreach (var role in user.Roles)
                                                    {
                                                        <span class="badge badge-primary mr-1">@role</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary">User</span>
                                                }
                                            </td>
                                            <td>@(user.CreatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                                            <td>
                                                <span class="badge badge-info">@user.TotalOrders</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-warning">@user.TotalShops</span>
                                            </td>
                                            <td>
                                                <span class="badge badge-success">@user.TotalProductsSold</span>
                                            </td>
                                            <td>
                                                @if (user.IsEKYCVerified)
                                                {
                                                    <span class="badge badge-success">
                                                        <i class="fas fa-check"></i> Đã xác thực
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-warning">
                                                        <i class="fas fa-times"></i> Chưa xác thực
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    @if (user.IsActive == true)
                                                    {
                                                        <form method="post" action="@Url.Action("BanUser", "Account")" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.UserId" />
                                                            <button type="submit" class="btn btn-sm btn-warning" 
                                                                    onclick="return confirm('Bạn có chắc chắn muốn khóa tài khoản này?')">
                                                                <i class="fas fa-lock"></i> Khóa
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form method="post" action="@Url.Action("BanUser", "Account")" class="d-inline">
                                                            <input type="hidden" name="userId" value="@user.UserId" />
                                                            <button type="submit" class="btn btn-sm btn-success" 
                                                                    onclick="return confirm('Bạn có chắc chắn muốn mở khóa tài khoản này?')">
                                                                <i class="fas fa-unlock"></i> Mở khóa
                                                            </button>
                                                        </form>
                                                    }
                                                    
                                                    @if (!user.Roles.Contains("Seller"))
                                                    {
                                                        @if (user.IsEKYCVerified)
                                                        {
                                                            <form method="post" action="@Url.Action("GrantSellerRole", "Account")" class="d-inline">
                                                                <input type="hidden" name="userId" value="@user.UserId" />
                                                                <button type="submit" class="btn btn-sm btn-info" 
                                                                        onclick="return confirm('Bạn có chắc chắn muốn cấp phép Seller cho người dùng này?')">
                                                                    <i class="fas fa-store"></i> Cấp Seller
                                                                </button>
                                                            </form>
                                                        }
                                                        else
                                                        {
                                                            <button type="button" class="btn btn-sm btn-secondary" 
                                                                    title="Người dùng chưa xác minh danh tính (eKYC)" disabled>
                                                                <i class="fas fa-store"></i> Cấp Seller
                                                            </button>
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="13" class="text-center">
                                            <div class="alert alert-info">
                                                <i class="fas fa-info-circle"></i> Không có người dùng nào trong hệ thống
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-sm-12 col-md-5">
                            <div class="dataTables_info">
                                Hiển thị @(Model?.Count ?? 0) người dùng
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-7">
                            <div class="dataTables_paginate paging_simple_numbers">
                                <!-- Pagination sẽ được thêm sau nếu cần -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                "responsive": true,
                "lengthChange": true,
                "autoWidth": true,
                "scrollX": true,
                "pageLength": 50,
                "order": [[0, "asc"]],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
                },
                "columnDefs": [
                    { "orderable": false, "targets": 12 }, // Cột thao tác không sắp xếp được
                    { "width": "80px", "targets": 0 },    // ID column
                    { "width": "120px", "targets": 1 },   // Username
                    { "width": "150px", "targets": 2 },   // Email
                    { "width": "100px", "targets": 3 },   // Phone
                    { "width": "100px", "targets": 4 },   // Balance
                    { "width": "80px", "targets": 5 },    // Status
                    { "width": "100px", "targets": 6 },   // Roles
                    { "width": "120px", "targets": 7 },   // Created Date
                    { "width": "80px", "targets": 8 },    // Orders
                    { "width": "80px", "targets": 9 },    // Shops
                    { "width": "100px", "targets": 10 },  // Products
                    { "width": "100px", "targets": 11 },  // eKYC
                    { "width": "150px", "targets": 12 }   // Actions
                ]
            });
        });
    </script>
}
